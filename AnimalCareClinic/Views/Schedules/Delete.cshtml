@model AnimalCareClinic.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Delete Schedule</h1>
            <p class="page-subtitle">Review details before removing this slot.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="text-danger fw-semibold mb-4">Are you sure you want to delete this schedule?</p>
            <dl class="row detail-list">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TimeSlot)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TimeSlot)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">Veterinarian</dt>
                <dd class="col-sm-9">@Model.Veterinarian.DisplayName</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="ScheduleId" />
                <button type="submit" class="btn btn-danger">Delete Schedule</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
