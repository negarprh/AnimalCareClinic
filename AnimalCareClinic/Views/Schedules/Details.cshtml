@model AnimalCareClinic.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Schedule Details</h1>
            <p class="page-subtitle">Availability slot details for the clinic.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Edit" asp-route-id="@Model?.ScheduleId" class="btn btn-outline-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row detail-list">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TimeSlot)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TimeSlot)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">Veterinarian</dt>
                <dd class="col-sm-9">@Model!.Veterinarian.DisplayName</dd>
            </dl>
        </div>
    </div>
</div>
