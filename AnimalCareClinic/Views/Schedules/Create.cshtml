@model AnimalCareClinic.ViewModels.ScheduleFormViewModel

@{
    ViewData["Title"] = "Create Schedule";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Create Schedule</h1>
            <p class="page-subtitle">Add availability slots for a veterinarian.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="VeterinarianId" class="form-label"></label>
                            <select asp-for="VeterinarianId" class="form-select" asp-items="ViewBag.VeterinarianId">
                                <option value="">Select veterinarian</option>
                            </select>
                            <span asp-validation-for="VeterinarianId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="TimeSlot" class="form-label"></label>
                            <select asp-for="TimeSlot" class="form-select" asp-items="ViewBag.TimeSlots">
                                <option value="">Select time</option>
                            </select>
                            <span asp-validation-for="TimeSlot" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusOptions"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create Schedule</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
