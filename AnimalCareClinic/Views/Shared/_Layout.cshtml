<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimalCareClinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnimalCareClinic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnimalCareClinic</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @* ==========================
                               SHARED ACCESS (all roles)
                               ========================== *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Secretary") || User.IsInRole("Veterinarian"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Animals" asp-action="Index">Animals</a>
                                </li>
                            }

                            @* ==========================
                               ADMIN + SECRETARY ACCESS
                               ========================== *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Secretary"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Owners" asp-action="Index">Owners</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Veterinarians" asp-action="Index">Veterinarians</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="VisitHistories" asp-action="Index">VisitHistories</a>
                                </li>
                            }

                            @* ==========================
                               VETERINARIAN ONLY
                               ========================== *@
                            else if (User.IsInRole("Veterinarian"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="VisitHistories" asp-action="Index">VisitHistories</a>
                                </li>
                            }

                            @* ==========================
                               ADMIN ONLY → REPORTS
                               ========================== *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Reports" asp-action="Monthly">
                                        Reports
                                    </a>
                                </li>
                            }

                            @* ==========================
                               USER DISPLAY + LOGOUT
                               ========================== *@
                            <li class="nav-item ms-auto">
                                <span class="nav-link text-muted">Hello, @User.Identity.Name</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AnimalCareClinic -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
