<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimalCareClinic</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnimalCareClinic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-logo" role="img" aria-label="Animal Care Clinic logo">AC</span>
                    <span class="brand-name">AnimalCareClinic</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto align-items-lg-center gap-lg-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @* ==========================
                               ADMIN NAVIGATION
                               ========================== *@
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Animals" asp-action="Index">Animals</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Owners" asp-action="Index">Owners</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Schedules" asp-action="Index">Schedules</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Veterinarians" asp-action="Index">Veterinarians</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="VisitHistories" asp-action="Index">VisitHistories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Reports" asp-action="Monthly">Monthly Reports</a>
                                </li>
                            }
                            @* ==========================
                               SECRETARY NAVIGATION
                               ========================== *@
                            else if (User.IsInRole("Secretary"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Animals" asp-action="Index">Animals</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Owners" asp-action="Index">Owners</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Schedules" asp-action="Index">Schedules</a>
                                </li>
                            }
                            @* ==========================
                               VETERINARIAN NAVIGATION
                               ========================== *@
                            else if (User.IsInRole("Veterinarian"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Animals" asp-action="Index">Animals</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="VisitHistories" asp-action="Index">VisitHistories</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav align-items-lg-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link nav-greeting">Hello, @(User.Identity?.Name ?? "User")</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link nav-cta" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-cta" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="app-content">
        <div class="container">
            @if (TempData["FlashMessage"] != null)
            {
                var flashType = TempData["FlashType"] as string ?? "success";
                <div class="alert alert-@flashType alert-dismissible fade show flash-message" role="alert">
                    @TempData["FlashMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-5">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
            <span>&copy; 2025 - AnimalCareClinic</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
