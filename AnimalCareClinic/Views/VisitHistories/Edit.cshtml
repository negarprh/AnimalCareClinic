@model AnimalCareClinic.Models.VisitHistory

@{
    ViewData["Title"] = "Edit Visit";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Edit Visit</h1>
            <p class="page-subtitle">Update visit details and clinical notes.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="VisitId" />

                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="AppointmentId" class="form-label">Appointment</label>
                            <select asp-for="AppointmentId" class="form-select" asp-items="ViewBag.AppointmentId"></select>
                            <span asp-validation-for="AppointmentId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="AnimalId" class="form-label">Animal</label>
                            <select asp-for="AnimalId" class="form-select" asp-items="ViewBag.AnimalId"></select>
                            <span asp-validation-for="AnimalId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="VeterinarianId" class="form-label">Veterinarian</label>
                            <select asp-for="VeterinarianId" class="form-select" asp-items="ViewBag.VeterinarianId"></select>
                            <span asp-validation-for="VeterinarianId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="VisitDate" class="form-label"></label>
                            <input asp-for="VisitDate" class="form-control" type="date" />
                            <span asp-validation-for="VisitDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Diagnosis" class="form-label"></label>
                            <textarea asp-for="Diagnosis" class="form-control" rows="3"
                                      placeholder="Diagnosis details"></textarea>
                            <span asp-validation-for="Diagnosis" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Treatment" class="form-label"></label>
                            <textarea asp-for="Treatment" class="form-control" rows="3"
                                      placeholder="Treatment administered"></textarea>
                            <span asp-validation-for="Treatment" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Prescription" class="form-label"></label>
                            <textarea asp-for="Prescription" class="form-control" rows="2"
                                      placeholder="Prescription details (optional)"></textarea>
                            <span asp-validation-for="Prescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
