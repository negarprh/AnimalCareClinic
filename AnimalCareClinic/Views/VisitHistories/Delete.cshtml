@model AnimalCareClinic.Models.VisitHistory

@{
    ViewData["Title"] = "Delete Visit";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Delete Visit</h1>
            <p class="page-subtitle">Review details before removing this visit record.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="text-danger fw-semibold mb-4">Are you sure you want to delete this visit record?</p>
            <dl class="row detail-list">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.VisitDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VisitDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Diagnosis)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Diagnosis)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Treatment)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Treatment)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Prescription)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Prescription)</dd>

                <dt class="col-sm-3">Animal</dt>
                <dd class="col-sm-9">@Model.Animal.DisplayName</dd>

                <dt class="col-sm-3">Appointment</dt>
                <dd class="col-sm-9">@Model.Appointment.DisplayName</dd>

                <dt class="col-sm-3">Veterinarian</dt>
                <dd class="col-sm-9">@Model.Veterinarian.DisplayName</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="VisitId" />
                <button type="submit" class="btn btn-danger">Delete Visit</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
