@model IEnumerable<AnimalCareClinic.Models.VisitHistory>

@{
    ViewData["Title"] = "Visit History";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Visit History</h1>
            <p class="page-subtitle">Medical visits and treatments recorded for clinic patients.</p>
        </div>

        <div class="page-actions">
            @* new change Admins and Veterinarians can create new visit records *@
            @if (User.IsInRole("Admin") || User.IsInRole("Veterinarian"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    + Add New Visit
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.VisitDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Diagnosis)</th>
                            <th>@Html.DisplayNameFor(model => model.Treatment)</th>
                            <th>@Html.DisplayNameFor(model => model.Prescription)</th>
                            <th>Animal</th>
                            <th>Appointment</th>
                            <th>Veterinarian</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.VisitDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.Diagnosis)</td>
                                <td>@Html.DisplayFor(modelItem => item.Treatment)</td>
                                <td>@Html.DisplayFor(modelItem => item.Prescription)</td>
                                <td>@item.Animal.DisplayName</td>
                                <td>@item.Appointment.DisplayName</td>
                                <td>@item.Veterinarian.DisplayName</td>

                                <td class="text-end text-nowrap">
                                    @* All roles can view Details *@
                                    <a asp-action="Details" asp-route-id="@item.VisitId"
                                       class="btn btn-sm btn-outline-info me-1">Details</a>

                                    @*new change  Admin and Veterinarian can edit/delete *@
                                    @if (User.IsInRole("Admin") || User.IsInRole("Veterinarian"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.VisitId"
                                           class="btn btn-sm btn-outline-secondary me-1">Edit</a>

                                        <a asp-action="Delete" asp-route-id="@item.VisitId"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this visit record?');">
                                            Delete
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
