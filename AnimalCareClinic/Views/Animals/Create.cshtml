@model AnimalCareClinic.Models.Animal

@{
    ViewData["Title"] = "Add Animal";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Add Animal</h1>
            <p class="page-subtitle">Register a new patient and link an owner.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="OwnerId" class="form-label">Owner</label>
                            <select asp-for="OwnerId" class="form-select" asp-items="ViewBag.OwnerId"></select>
                            <span asp-validation-for="OwnerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Luna" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="Species" class="form-label"></label>
                            <input asp-for="Species" class="form-control" placeholder="e.g., Dog" />
                            <span asp-validation-for="Species" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" class="form-control" placeholder="e.g., 4" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <input asp-for="Gender" class="form-control" placeholder="M or F" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="MedicalHistory" class="form-label"></label>
                            <textarea asp-for="MedicalHistory" class="form-control" rows="3"
                                      placeholder="Allergies, surgeries, notes"></textarea>
                            <span asp-validation-for="MedicalHistory" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create Animal</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
