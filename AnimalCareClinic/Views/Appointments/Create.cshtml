@model AnimalCareClinic.ViewModels.AppointmentFormViewModel

@{
    ViewData["Title"] = "Schedule Appointment";
    var slotCount = ViewData["ScheduleCount"] as int? ?? 0;
    var selectedVetName = ViewData["SelectedVeterinarianName"] as string ?? "Selected veterinarian";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Schedule Appointment</h1>
            <p class="page-subtitle">Pick a veterinarian and date to see available slots.</p>
        </div>
        <div class="page-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="get" asp-action="Create" class="row g-3 align-items-end">
                <div class="col-lg-5">
                    <label asp-for="VeterinarianId" class="form-label"></label>
                    <select asp-for="VeterinarianId" class="form-select" asp-items="ViewBag.VeterinarianId">
                        <option value="">Select veterinarian</option>
                    </select>
                </div>
                <div class="col-lg-4">
                    <label asp-for="AppointmentDate" class="form-label"></label>
                    <input asp-for="AppointmentDate" class="form-control" type="date" />
                </div>
                <div class="col-lg-3">
                    <button type="submit" class="btn btn-outline-primary w-100">Find Slots</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="VeterinarianId" />
                <input type="hidden" name="AppointmentDate" value="@(Model.AppointmentDate?.ToString("yyyy-MM-dd"))" />

                @if (Model.VeterinarianId > 0 && Model.AppointmentDate.HasValue)
                {
                    <div class="alert alert-info">
                        Showing available slots for <strong>@selectedVetName</strong> on
                        <strong>@Model.AppointmentDate.Value.ToString("yyyy-MM-dd")</strong>.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        Select a veterinarian and date above to load available slots.
                    </div>
                }

                <div class="text-danger small mb-3">
                    <span asp-validation-for="VeterinarianId"></span>
                    <span asp-validation-for="AppointmentDate"></span>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="ScheduleId" class="form-label">Schedule Slot</label>
                            <select asp-for="ScheduleId" class="form-select" asp-items="ViewBag.ScheduleId">
                                <option value="">Select a slot</option>
                            </select>
                            <span asp-validation-for="ScheduleId" class="text-danger"></span>
                            @if (Model.VeterinarianId > 0 && Model.AppointmentDate.HasValue && slotCount == 0)
                            {
                                <div class="form-text text-danger">No available slots for this date.</div>
                            }
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label asp-for="AnimalId" class="form-label"></label>
                            <select asp-for="AnimalId" class="form-select" asp-items="ViewBag.AnimalId">
                                <option value="">Select animal</option>
                            </select>
                            <span asp-validation-for="AnimalId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label"></label>
                            <textarea asp-for="Reason" class="form-control" rows="3"
                                      placeholder="Reason for visit"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Book Appointment</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
