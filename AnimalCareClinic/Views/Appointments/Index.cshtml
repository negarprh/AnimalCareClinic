@model IEnumerable<AnimalCareClinic.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="page">
    <div class="page-header">
        <div>
            <h1 class="page-title">Appointments</h1>
            <p class="page-subtitle">Scheduled visits for clinic patients.</p>
        </div>

        <div class="page-actions">
            @* Only Admin + Secretary can create appointment *@
            @if (User.IsInRole("Admin") || User.IsInRole("Secretary"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    + Schedule New Appointment
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
                <div class="search-input">
                    <input id="appointmentSearch" class="form-control" placeholder="Search appointments..." />
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="sortAppointmentDate">Sort by Date</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="sortAppointmentTime">Sort by Time</button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0" id="appointmentTable">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.AppointmentDate)</th>
                        <th>@Html.DisplayNameFor(model => model.AppointmentTime)</th>
                        <th>@Html.DisplayNameFor(model => model.Reason)</th>
                        <th>Status</th>
                        <th>Animal</th>
                        <th>Schedule</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-date="@item.AppointmentDate.ToString("yyyy-MM-dd")" data-time="@item.AppointmentTime.ToString("HH:mm")">
                            <td>@item.AppointmentDate</td>
                            <td>@item.AppointmentTime</td>
                            <td>@item.Reason</td>
                            <td>
                                @if (string.Equals(item.Status, "Cancelled", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-danger-subtle text-danger">Cancelled</span>
                                }
                                else if (string.Equals(item.Status, "Completed", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-success-subtle text-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary-subtle text-primary">Booked</span>
                                }
                            </td>
                            <td>@item.Animal.DisplayName</td>
                            <td>@item.Schedule.DisplayName</td>
                            <td class="text-end text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.AppointmentId"
                                   class="btn btn-sm btn-outline-info me-1">Details</a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Secretary"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.AppointmentId"
                                       class="btn btn-sm btn-outline-secondary me-1">Edit</a>

                                    @if (string.Equals(item.Status, "Booked", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <a asp-action="Complete" asp-route-id="@item.AppointmentId"
                                           class="btn btn-sm btn-outline-success me-1"
                                           onclick="return confirm('Mark this appointment as completed?');">
                                            Complete
                                        </a>
                                        <a asp-action="Cancel" asp-route-id="@item.AppointmentId"
                                           class="btn btn-sm btn-warning me-1"
                                           onclick="return confirm('Cancel this appointment and free the slot?');">
                                            Cancel
                                        </a>
                                    }

                                    <a asp-action="Delete" asp-route-id="@item.AppointmentId"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Are you sure you want to permanently delete this appointment?');">
                                        Delete
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const appointmentSearch = document.getElementById('appointmentSearch');
        const appointmentTableBody = document.querySelector('#appointmentTable tbody');
        const appointmentRows = Array.from(appointmentTableBody.querySelectorAll('tr'));
        let appointmentDateAsc = true;
        let appointmentTimeAsc = true;

        appointmentSearch?.addEventListener('input', () => {
            const term = appointmentSearch.value.toLowerCase();
            appointmentRows.forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(term) ? '' : 'none';
            });
        });

        document.getElementById('sortAppointmentDate')?.addEventListener('click', () => {
            appointmentRows.sort((a, b) => {
                const aDate = a.dataset.date || '';
                const bDate = b.dataset.date || '';
                return appointmentDateAsc ? aDate.localeCompare(bDate) : bDate.localeCompare(aDate);
            });
            appointmentDateAsc = !appointmentDateAsc;
            appointmentRows.forEach(row => appointmentTableBody.appendChild(row));
        });

        document.getElementById('sortAppointmentTime')?.addEventListener('click', () => {
            appointmentRows.sort((a, b) => {
                const aTime = a.dataset.time || '';
                const bTime = b.dataset.time || '';
                return appointmentTimeAsc ? aTime.localeCompare(bTime) : bTime.localeCompare(aTime);
            });
            appointmentTimeAsc = !appointmentTimeAsc;
            appointmentRows.forEach(row => appointmentTableBody.appendChild(row));
        });
    </script>
}
